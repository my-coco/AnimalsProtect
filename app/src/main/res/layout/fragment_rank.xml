<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/rank_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_47dp"
        android:layout_marginEnd="@dimen/size_47dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Spinner
            android:id="@+id/province"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_27dp"
            android:background="@color/grayness"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_27dp"
            android:background="@color/grayness"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/county"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_27dp"
            android:background="@color/grayness"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_65dp"
        android:layout_marginEnd="@dimen/size_30dp"
        android:background="@drawable/boder_radius_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/animal_rank_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_18dp"
            android:layout_marginEnd="@dimen/size_15dp"
            android:divider="@color/transparency"
            android:dividerHeight="@dimen/size_11dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>