<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.report.ReportActivity">
    <ImageView
        android:id="@+id/back_ic"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginStart="@dimen/size_5dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:src="@drawable/back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sent_btn"
        android:layout_width="@dimen/size_67dp"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/boder_radius_5"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/back_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_ic" />

    <EditText
        android:id="@+id/report_words"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_315dp"
        android:layout_marginTop="@dimen/size_7dp"
        android:background="@drawable/border_grayness"
        android:gravity="start"
        android:hint="输入举报内容"
        android:padding="@dimen/size_10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_ic" />

    <ImageView
        android:id="@+id/add_ic"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        android:src="@drawable/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_words" />
</androidx.constraintlayout.widget.ConstraintLayout>