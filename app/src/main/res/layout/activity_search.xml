<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.search.SearchActivity">
    <ImageView
        android:id="@+id/back_ic"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginStart="@dimen/size_5dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:src="@drawable/back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="@dimen/size_225dp"
        android:layout_height="@dimen/size_38dp"
        android:layout_marginTop="@dimen/size_46dp"
        android:background="@drawable/border_radius_14"
        android:hint="搜索"
        android:paddingLeft="@dimen/size_25dp"
        android:textSize="@dimen/font_13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_38dp"
        android:background="@drawable/border_radius_14_grayness"
        android:gravity="center"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp"
        android:text="确定"
        app:layout_constraintBottom_toBottomOf="@+id/search_bar"
        app:layout_constraintEnd_toEndOf="@+id/search_bar"
        app:layout_constraintTop_toTopOf="@+id/search_bar"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:scrollbars="none"
        android:divider="#00000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar" />

    <TextView
        android:id="@+id/org_btn"
        android:layout_width="@dimen/size_328dp"
        android:layout_height="@dimen/size_193dp"
        android:gravity="center"
        android:text="流浪动物收容机构"
        android:background="@drawable/border_radius_14"
        android:layout_marginTop="@dimen/size_60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list" />

    <TextView
        android:id="@+id/animals_btn"
        android:layout_width="@dimen/size_328dp"
        android:layout_height="@dimen/size_193dp"
        android:gravity="center"
        android:text="小动物们"
        android:background="@drawable/border_radius_14"
        android:layout_marginTop="@dimen/size_40dp"
        app:layout_constraintEnd_toEndOf="@+id/org_btn"
        app:layout_constraintStart_toStartOf="@+id/org_btn"
        app:layout_constraintTop_toBottomOf="@+id/org_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>