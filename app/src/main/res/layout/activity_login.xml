<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:background="#2757B5">

    <EditText
        android:id="@+id/user_phone"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/size_58dp"
        android:layout_marginTop="@dimen/size_225dp"
        android:paddingLeft="@dimen/size_15dp"
        android:hint="手机号："
        android:background="@drawable/boder_radius_26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="@dimen/size_350dp"
        android:layout_height="@dimen/size_58dp"
        android:layout_marginTop="@dimen/size_31dp"
        android:paddingLeft="@dimen/size_15dp"
        android:hint="密码："
        android:background="@drawable/boder_radius_26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_phone" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="@dimen/size_88dp"
        android:layout_height="@dimen/size_46dp"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_password" />
</androidx.constraintlayout.widget.ConstraintLayout>